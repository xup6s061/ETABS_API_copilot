<Window x:Class="ETABS_API_copilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="建築物構架生成器" Height="400" Width="300">
    <TabControl>
        <TabItem Header="基本">
            <StackPanel Margin="20">
                <Button Content="開啟 ETABS"
                    Command="{Binding OpenETABSCommand}"
                    Margin="10"
                    Width="200" />
                <Button Content="創建新檔案"
                    Command="{Binding CreateNewETABSFileCommand}"
                    Margin="10"
                    Width="200" />
            </StackPanel>
        </TabItem>
        <!-- Added missing closing tag for TabItem -->

        <TabItem Header="參數" Height="21" Margin="-2,-2,-2,0" VerticalAlignment="Top">
            <StackPanel Margin="10">
                <DataGrid ItemsSource="{Binding Buildings}" AutoGenerateColumns="False" Height="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="建築物名稱" Binding="{Binding BuildingName}" />
                        <DataGridTextColumn Header="樓層高度" Binding="{Binding FloorHeights}" />
                        <DataGridTextColumn Header="X方向跨距" Binding="{Binding XSpans}" />
                        <DataGridTextColumn Header="Y方向跨距" Binding="{Binding YSpans}" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="讀取 JSON" Command="{Binding LoadJsonCommand}" Margin="5" />
                    <Button Content="匯出 JSON" Command="{Binding SaveJsonCommand}" Margin="5" />
                    <Button Content="執行所有建物" Command="{Binding ExecuteSelectedBuildingsCommand}" Margin="5" />
                </StackPanel>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
